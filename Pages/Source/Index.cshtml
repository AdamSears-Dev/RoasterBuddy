@page
@model RoasterBuddy.Pages.Source.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Sources</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Source[0].Farm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source[0].Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Source) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Farm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
